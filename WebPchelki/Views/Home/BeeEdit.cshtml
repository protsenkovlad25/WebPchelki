@model WebPchelki.Models.Entities.Bee
@{
    ViewBag.Title = "Редактирование пчёл";
}
<form asp-action="BeeEdit" asp-controller="Home" asp-route-id="@Model.Id" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Productivity" class="control-label">Продуктивность, кг/год мёда</label>
        <input type="text" asp-for="Productivity" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>
