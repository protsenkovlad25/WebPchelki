@model WebPchelki.Models.Entities.Beehive
@{
    ViewBag.Title = "Удаление улья";
}

<div>
    <dl class="dl-horizontal">
        <dt>Id</dt>
        <dd>@Html.DisplayFor(model => model.Id)</dd>

        <dt>Название</dt>
        <dd>@Html.DisplayFor(model => model.Name)</dd>

        <dt>Размер</dt>
        <dd>@Html.DisplayFor(model => model.Size)</dd>

        <dt>Размер рамки</dt>
        <dd>@Html.DisplayFor(model => model.FrameSize)</dd>

        <dt>Кол-во рамок</dt>
        <dd>@Html.DisplayFor(model => model.FrameNumber)</dd>
    </dl>

    <div>
        <form asp-controller="Home" asp-action="BeehiveDelete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>
