@model WebPchelki.Models.Entities.Equipment
@{
    ViewBag.Title = "Удаление инструмента";
}

<div>
    <dl class="dl-horizontal">
        <dt>Id</dt>
        <dd>@Html.DisplayFor(model => model.Id)</dd>

        <dt>Название</dt>
        <dd>@Html.DisplayFor(model => model.Name)</dd>

        <dt>Кол-во</dt>
        <dd>@Html.DisplayFor(model => model.Number)</dd>
    </dl>

    <div>
        <form asp-controller="Home" asp-action="EquipmentDelete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>
