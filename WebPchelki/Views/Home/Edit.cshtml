@model WebPchelki.Models.Entities.Product
@{
    ViewBag.Title = "Редактирование продукта";
}
<form asp-action="Edit" asp-controller="Home" asp-route-id="@Model.Id" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Number" class="control-label">Кол-во</label>
        <input type="text" asp-for="Number" class="form-control" />
    </div>
    <div class="form-group">
        <input type="hidden" asp-for="TypeProductId" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>
